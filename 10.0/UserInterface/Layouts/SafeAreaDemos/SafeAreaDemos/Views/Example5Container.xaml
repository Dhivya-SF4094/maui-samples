<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeAreaDemos.Views.Example5Container"
             Title="SafeAreaEdges: Container"
             Shell.NavBarIsVisible="False"
             Background="Gray">
       <Grid RowDefinitions="Auto,Auto,*,Auto"
             SafeAreaEdges="Container">
              <Label Grid.Row="0"
                     Background="Violet"
                     Text="SafeAreaEdges: Container"
                     Padding="20"
                     FontSize="18"
                     FontAttributes="Bold"
                     HorizontalTextAlignment="Center"/>
              <Button Text="&#x2039;"
                      Grid.Row="1"
                      HorizontalOptions="End"
                      BackgroundColor="#0078D4"
                      FontFamily="OpenSansSemibold"
                      FontSize="40"
                      Padding="-5,-10,0,0"
                      WidthRequest="50"
                      HeightRequest="50"
                      CornerRadius="25"
                      Clicked="Button_Clicked"/>
              <VerticalStackLayout Padding="20"
                                   Grid.Row="2"
                                   Spacing="15">
                     <Label Text="SafeAreaEdges: Container, Content flows under keyboard but avoids the status bars, notches, and home indicators."
                            FontAttributes="Bold"/>
                     <Entry Placeholder="Type here.."
                            PlaceholderColor="Black"/>
              </VerticalStackLayout>

              <Border Grid.Row="3"
                      BackgroundColor="LightGreen"
                      Padding="20">
                     <Image Source="dotnet_bot.png"
                            Aspect="AspectFit"
                            HorizontalOptions="Center"/>
              </Border>
       </Grid>
</ContentPage>
