<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PickerDemo.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PickerDemo"
             xmlns:controls="clr-namespace:PickerDemo.Control">

    <VerticalStackLayout Spacing="20"
                         Padding="20">

        <Label Text="Picker Color Customization Demo"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,20"/>

        <Label Text="{Binding Source={x:Reference BasicCountryPicker}, Path=SelectedItem, StringFormat='Selected Country: {0}'}"
               FontSize="16"
               Margin="0,5,0,5"/>
        <controls:CustomPicker
            x:Name="BasicCountryPicker"
            Title="Choose Country"
            BackgroundColor="Red"
            SelectedItemTextColor="DarkOrange"
            DialogBackgroundColor="Pink"
            DialogTextColor="DarkGreen"
            FontSize="16">
            <Picker.Items>
                <x:String>United States</x:String>
                <x:String>Canada</x:String>
                <x:String>United Kingdom</x:String>
                <x:String>Australia</x:String>
                <x:String>Germany</x:String>
                <x:String>France</x:String>
                <x:String>Japan</x:String>
                <x:String>India</x:String>
            </Picker.Items>
        </controls:CustomPicker>
    </VerticalStackLayout>
</ContentPage>